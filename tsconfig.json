{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "include": [
    "**/*",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "client-src",
    "client-build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ],
      "Common/*": [
        "./common/*"
      ]
    },
    "types": [
      "adonis5-jwt",
      "adonis5-bullmq"
    ],
    "strictPropertyInitialization": false
  }
}